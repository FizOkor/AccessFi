{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "src/backend/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/backend/index.js" },
    
    { "src": "/(assets/.*)", "dest": "/dist/$1" },
    
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
